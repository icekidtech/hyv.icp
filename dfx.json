{
  "canisters": {
    "hyv_backend": {
      "main": "src/hyv_backend/main.mo",
      "type": "motoko"
    },
    "hyv_generator": {
      "type": "motoko",
      "main": "src/hyv_generator/main.mo"
    },
    "hyv_ai_engine": {
      "type": "custom",
      "build": "bash scripts/build_ai_engine.sh",
      "wasm": "target/wasm32-wasip1/release/hyv_ai_engine-ic.wasm",
      "candid": "src/hyv_ai_engine/hyv_ai_engine.did",
      "metadata": [
        {
          "name": "candid:service"
        }
      ]
    },
    "hyv_frontend": {
      "dependencies": [
        "hyv_backend",
        "hyv_generator",
        "hyv_ai_engine"
      ],
      "source": [
        "src/hyv_frontend/dist"
      ],
      "type": "assets",
      "workspace": "hyv_frontend"
    }
  },
  "defaults": {
    "build": {
      "args": "",
      "packtool": ""
    }
  },
  "output_env_file": ".env",
  "version": 1,
  "networks": {
    "local": {
      "bind": "127.0.0.1:4943",
      "type": "ephemeral"
    }
  }
}
